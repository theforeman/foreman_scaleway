<%= text_f f,
  :username,
  :value => @image.username || "root",
  :help_inline => _("The user that is used to ssh into the instance, normally root for Scaleway images.") %>
<%= select_f f, :uuid, @compute_resource.available_images.to_a.sort_by { |image| image.name.downcase },
  :id, ->(image) {"#{image.name} [#{image.try(:default_bootscript).try(:title)}, #{image.public ? 'public' : 'private' }]"}, {},
  :label => _('Image'),
  :help_inline => _('Choose the Operating System Image and the default bootscript (kernel, initrd, cmdline)') %>
